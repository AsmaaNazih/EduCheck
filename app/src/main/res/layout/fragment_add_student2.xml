<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF3FE"
    tools:context=".Controleur.DashbardTeacher.AddStudentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal"
        android:padding="10sp"
        android:textSize="22sp"
        android:background="#D0B0F3"
        android:textStyle="bold|italic"
        android:text="Select Course" />

    <Spinner
        android:id="@+id/spinner_type_choice_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:entries="@array/choices"
        android:layout_marginStart="10sp"
        android:background="@color/gray_400"/>

    <Spinner
        android:id="@+id/spinner_acaback_name_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:background="@color/gray_400"/>

    <Spinner
        android:id="@+id/spinner_course_name_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:background="@color/gray_400"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:text="Add Course Students"
        android:padding="5sp"
        android:background="#D0B0F3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10sp">

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Student :"/>
        <AutoCompleteTextView
            android:id="@+id/emailStudent"
            android:layout_marginTop="20sp"
            android:textSize="10sp"
            android:layout_width="200sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnAdd"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filecsv"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10sp"
            android:layout_width="260sp"
            android:layout_height="wrap_content"
            android:text="File .csv :"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:text="Add File"
            android:id="@+id/btnAddFile"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:text="Add Marks Students"
        android:padding="5sp"
        android:background="#D0B0F3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_type_choice_students"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="25sp"
                android:layout_marginStart="10sp"
                android:background="@color/gray_400"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="Type:"/>

                <EditText
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/edittype"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="Teacher:"/>

                <EditText
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/editteacher"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="Mark:"/>

                <EditText
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/editmark"/>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Add Mark"
                android:layout_marginTop="10sp"
                android:id="@+id/btnaddmark"/>

        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>