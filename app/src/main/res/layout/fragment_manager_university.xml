<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controleur.DashboardAdmin.ManagerUniversityFragment"
    android:background="#FAF3FE"
    android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:textSize="22sp"
            android:background="#D0B0F3"
            android:textStyle="bold|italic"
            android:text="University information" />

        <ImageView
            android:id="@+id/LogoUniv"
            android:layout_width="92sp"
            android:layout_height="90sp"
            android:layout_margin="20sp"
            android:layout_gravity="center"
            tools:src="@drawable/baseline_more_vert_white_24dp" />

            <TextView
                android:id="@+id/sufStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Suffix student : "
                android:layout_marginStart="20sp"/>

            <TextView
                android:id="@+id/sufTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Suffix teacher : "
                android:layout_marginStart="20sp"/>
            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Name of university : "
                android:layout_marginStart="20sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:textSize="18sp"
            android:background="#D0B0F3"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:padding="10sp"
            android:text="Change university information :  " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Name  :"
                android:layout_marginStart="20sp"/>

            <EditText
                 android:id="@+id/NewName"
                android:layout_width="194sp"
                android:layout_height="wrap_content"
                android:hint="NewName"
                android:textSize="15sp"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="SuffixStudent  :"
                android:layout_marginStart="20sp"/>

            <EditText
                android:id="@+id/NewSuffixStudent"
                android:layout_width="194sp"
                android:layout_height="wrap_content"
                android:hint="NewSuffixStudent"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="SuffixTeacher :"
                android:layout_marginStart="20sp"/>

            <EditText
                android:id="@+id/NewSuffixTeacher"
                android:layout_width="194sp"
                android:layout_height="wrap_content"
                android:hint="NewSuffixTeacher"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Logo :"
                android:layout_marginStart="20sp"/>

            <Button
                android:id="@+id/btnImportImage"
                android:layout_width="194sp"
                android:layout_height="wrap_content"
                android:text="Import an image" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/NewLogo"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_marginStart="20sp"
                tools:src="@drawable/baseline_more_vert_white_24dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="194sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70sp"
                android:text="Save" />
        </LinearLayout>


</LinearLayout>