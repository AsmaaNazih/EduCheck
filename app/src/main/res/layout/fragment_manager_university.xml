<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controleur.DashboardAdmin.ManagerUniversityFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:textSize="18dp"
            android:background="#D0B0F3"
            android:textStyle="bold|italic"
            android:text="University information" />

        <ImageView
            android:id="@+id/LogoUniv"
            android:layout_width="92dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            tools:src="@drawable/baseline_more_vert_white_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sufStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Suffix student : "
                android:layout_marginStart="20sp"/>

            <TextView
                android:id="@+id/sufTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Suffix teacher : "
                android:layout_marginStart="20sp"/>
            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Name of university : "
                android:layout_marginStart="20sp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:background="#D0B0F3"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:text="Change university information :  " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Name  :" />

            <EditText
                 android:id="@+id/NewName"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:hint="NewName"
                android:textSize="15dp"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="SuffixStudent  :" />

            <EditText
                android:id="@+id/NewSuffixStudent"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:hint="NewSuffixStudent"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="SuffixTeacher :" />

            <EditText
                android:id="@+id/NewSuffixTeacher"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:hint="NewSuffixTeacher"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Logo :" />

            <Button
                android:id="@+id/btnImportImage"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:onClick="importImage"
                android:text="Importer une image" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/NewLogo"
                android:layout_width="92dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                tools:src="@drawable/baseline_more_vert_white_24dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="28dp"
                android:onClick="saveChanges"
                android:text="Enregistrer" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>