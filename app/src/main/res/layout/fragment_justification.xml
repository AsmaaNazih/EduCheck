<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF3FE"
    android:orientation="vertical"
    tools:context=".Controleur.Dashboard.FragJustification2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:text="Add Justification"
        android:layout_marginTop="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgJ"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="60sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"/>
    <Button
        android:id="@+id/btnSelectFile"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:text="Select File"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400sp"
        android:layout_marginLeft="-360sp"/>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:text="Upload File"
        android:layout_below="@id/btnSelectFile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400sp"
        />

        <Button
            android:id="@+id/btnOpenPdf"
            android:layout_width="80sp"
            android:layout_height="50sp"
            android:text="Watch File"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400sp"
            />
    </LinearLayout>
</RelativeLayout>
